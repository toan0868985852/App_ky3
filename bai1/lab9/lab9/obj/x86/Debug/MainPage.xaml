<Page x:ConnectionId='1'
    x:Class="lab9.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:lab9"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:data="using:lab9.Model"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Title" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30"/>
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Author" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30"/>
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Price" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30"/>
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Image" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30"/>
        <TextBox x:ConnectionId='2' Grid.Row="0" Grid.Column="1" Name="TitleTextBoox" Height="30"/>
        <TextBox x:ConnectionId='3' Grid.Row="1" Grid.Column="1" Name="AuthorTextBox" Height="30"/>
        <TextBox x:ConnectionId='4' Grid.Row="2" Grid.Column="1" Name="PriceTextBox" Height="30"/>
        <ComboBox x:ConnectionId='5' Name="ImageBookComboBox" 
                      Height="80"
                      Width="150"
                      Grid.Row="3" 
                      Grid.Column="1" 
                                                       
                      Margin="10">
            <ComboBox.ItemTemplate>
                <DataTemplate                           >
                    <Image x:ConnectionId='15'                             Width="60" Height="60" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <Button x:ConnectionId='6' Grid.Row="4" Grid.Column="1" FontSize="30" Content="Add" Width="100" Margin="4,0"             />

        <GridView x:ConnectionId='7' 
            Grid.Row="5" 
            Grid.Column="1"
                                         
            Margin="20">
            <GridView.ItemTemplate>
                <DataTemplate                       >
                    <StackPanel x:ConnectionId='9' HorizontalAlignment="Center" Margin="10">
                        <Image x:ConnectionId='10' Name="AvatarImage"                         Width="100" Height="100" />
                        <StackPanel Orientation="Horizontal" 
                                    Margin="0,10,0,0" 
                                    HorizontalAlignment="Center">
                            <TextBlock x:ConnectionId='11'                       Margin="0,0,5,0" />
                            <TextBlock x:ConnectionId='12'                        Margin="0,0,5,0"/>
                            <StackPanel>
                                <TextBlock x:ConnectionId='13'                       />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>

